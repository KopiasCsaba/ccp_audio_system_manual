# EvdevRelay Configuration
# Save this as .env in the project root

# OSC Server
OSC_HOST=localhost        # OSC server hostname or IP address
OSC_PORT=8000             # OSC server port (1-65535)

# Connection
RECONNECT_DELAY=5         # Seconds between reconnection attempts
SCAN_INTERVAL=5           # Seconds between device scans

# Command Blocks
DISABLE_MERGED=false      # Disable /merged/{device_type}/{code} messages
DISABLE_LATEST=false      # Disable /merged/latest/* messages (key, value, device)
DISABLE_BY_TYPE=false     # Disable /{device_type}/{vendor}/{product}/{code} messages
